<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/LogoInfnet"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/lp48iqxnwwwi8z0h7h0rafdwgusn0jof" />

            <TextView
                android:id="@+id/textViewCabecalho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ESTI - Escola Superior da Tecnologia da Informação\nEDC - Graduação em Engenharia da Computação\nFundamentos do Desenvolvimento Android\nAssessment"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewCabecalho2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Aluno: Eloy Barbosaa\nProfessor: Thiago Aguiar\nData: 15/12/2020 "
                android:textAlignment="viewEnd"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewTituloAnalise2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/textTitulo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Insira seu nome"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/buttonIniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Iniciar" />

            <Button
                android:id="@+id/buttonSintomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Principais sintomas" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/logoPwC"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/pwc" />

            <TextView
                android:id="@+id/textViewInfoPwC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/textViewPwC"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>